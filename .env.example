# Root Level Environment Variables (Shared)
# These can be used by both apps or in CI/CD

# Application
APP_NAME=tutorstartup
APP_VERSION=0.1.0
NODE_ENV=development

# API routing
API_PREFIX=api
API_VERSION=1

# Frontend origins (comma separated)
FRONTEND_URL=http://localhost:3000

# Rate limiting defaults (seconds / requests)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Feature drivers (override to 'memory' for tests)
CACHE_DRIVER=redis
QUEUE_DRIVER=redis
QUEUE_PREFIX=tutorstartup
SEARCH_DRIVER=meilisearch
CACHE_DEFAULT_TTL=30
SEARCH_SYNC_ENABLED=true

# Database (if shared)
# DATABASE_URL=postgresql://user:password@localhost:5432/tutorstartup

# Redis (if shared)
REDIS_URL=redis://localhost:6379

# Meilisearch
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=
MEILISEARCH_INDEX_PREFIX=tutorstartup

# Web client
NEXT_PUBLIC_API_URL=http://localhost:4000/api
