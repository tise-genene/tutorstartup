# Next.js App Environment Variables

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-change-in-production
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_BASE_PATH=/api/auth

# Database (for Better Auth - can use same as API or separate)
DATABASE_URL=postgresql://user:password@localhost:5432/tutorstartup_auth

# OAuth Providers (optional - add as needed)
# BETTER_AUTH_GOOGLE_CLIENT_ID=
# BETTER_AUTH_GOOGLE_CLIENT_SECRET=

# Payment Gateways (public keys if needed client-side)
NEXT_PUBLIC_CHAPA_PUBLIC_KEY=your-chapa-public-key
NEXT_PUBLIC_TELEBIRR_PUBLIC_KEY=your-telebirr-public-key

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_HOST=

# AI Chat Assistant
OPENAI_API_KEY=your-openai-api-key-here

# Environment
NODE_ENV=development
