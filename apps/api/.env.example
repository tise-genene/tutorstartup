# NestJS API Environment Variables

# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api
API_VERSION=1
FRONTEND_URL=http://localhost:3000

# Database - PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/tutorstartup
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_NAME=tutorstartup
DB_SSL=false

# Feature drivers
CACHE_DRIVER=redis
CACHE_DEFAULT_TTL=30
QUEUE_DRIVER=redis
QUEUE_PREFIX=tutorstartup
SEARCH_DRIVER=meilisearch
SEARCH_SYNC_ENABLED=true

# Redis (Cache & Queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# JWT & Security
JWT_SECRET=your-jwt-secret-min-32-chars-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Better Auth (sync with web app)
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-change-in-production
BETTER_AUTH_URL=http://localhost:3000

# Payment Gateways - Chapa
CHAPA_SECRET_KEY=your-chapa-secret-key
CHAPA_PUBLIC_KEY=your-chapa-public-key
CHAPA_WEBHOOK_SECRET=your-chapa-webhook-secret
CHAPA_BASE_URL=https://api.chapa.co/v1

# Payment Gateways - Telebirr
TELEBIRR_APP_ID=your-telebirr-app-id
TELEBIRR_APP_KEY=your-telebirr-app-key
TELEBIRR_PUBLIC_KEY=your-telebirr-public-key
TELEBIRR_SHORT_CODE=your-telebirr-short-code
TELEBIRR_BASE_URL=https://api.telebirr.com

# Platform Settings
PLATFORM_FEE_PERCENTAGE=5
PLATFORM_MIN_FEE=10
PLATFORM_CURRENCY=ETB

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=tutorstartup-uploads
AWS_S3_BUCKET_REGION=us-east-1
AWS_CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net

# File Upload & Content Safety
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_DIR=./uploads
ENABLE_VIRUS_SCAN=true
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Meilisearch (Search Engine)
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=your-meilisearch-master-key
MEILISEARCH_INDEX_PREFIX=tutorstartup

# Socket.IO / Realtime
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_PATH=/socket.io

# Email Service (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@tutorstartup.com

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@tutorstartup.com

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_DRIVER=redis
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Admin
ADMIN_EMAIL=admin@tutorstartup.com
ADMIN_PASSWORD=change-this-in-production

# KYC / Verification (if using third-party)
# KYC_API_KEY=
# KYC_API_URL=

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_AGENCY_FEATURES=true
