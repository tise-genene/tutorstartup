// Prisma schema for tutorstartup API

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  PARENT
  TUTOR
  AGENCY
  ADMIN
}

enum LessonRequestStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum JobPostStatus {
  OPEN
  CLOSED
}

enum ProposalStatus {
  SUBMITTED
  WITHDRAWN
  ACCEPTED
  DECLINED
}

enum ContractStatus {
  PENDING_PAYMENT
  ACTIVE
  COMPLETED
  CANCELLED
}

enum PaymentProvider {
  CHAPA
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
}

enum LedgerEntryType {
  CLIENT_CHARGE
  ESCROW_DEPOSIT
  PLATFORM_FEE
  TUTOR_PAYABLE
  TUTOR_PAYOUT
  REFUND
}

enum ContractMilestoneStatus {
  DRAFT
  FUNDED
  RELEASED
  CANCELLED
}

enum AuthTokenType {
  EMAIL_VERIFY
  PASSWORD_RESET
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String
  passwordHash String?
  googleId     String?       @unique
  role         UserRole      @default(STUDENT)
  phone        String?       @db.VarChar(50)
  isVerified   Boolean       @default(false)
  avatarUrl    String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  tutorProfile TutorProfile?

  lessonRequestsSent     LessonRequest[] @relation("LessonRequestsFromRequester")
  lessonRequestsReceived LessonRequest[] @relation("LessonRequestsToTutor")

  jobPosts JobPost[] @relation("JobPostsByParent")
  proposals Proposal[] @relation("ProposalsByTutor")

  contractsAsParent Contract[] @relation("ContractsByParent")
  contractsAsTutor  Contract[] @relation("ContractsByTutor")

  contractMessages ContractMessage[]

  payments Payment[] @relation("PaymentsByUser")

  sessions Session[]

  authTokens AuthToken[]
}

model AuthToken {
  id        String        @id @default(uuid())
  userId    String
  type      AuthTokenType
  tokenHash String        @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime      @default(now())

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type, createdAt])
  @@index([expiresAt])
}

model Session {
  id               String   @id @default(uuid())
  userId           String
  tokenId          String   @unique
  tokenHash        String
  expiresAt        DateTime
  revokedAt        DateTime?
  replacedByTokenId String?
  userAgent        String?
  ip               String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, revokedAt])
}

model TutorProfile {
  id         String    @id @default(uuid())
  userId     String    @unique
  bio        String?
  subjects   String[]  @default([])
  hourlyRate Int?
  languages  String[]  @default([])
  location   String?
  rating     Float?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LessonRequest {
  id          String              @id @default(uuid())
  tutorId     String
  requesterId String
  subject     String
  message     String
  status      LessonRequestStatus @default(PENDING)

  tutorResponseMessage String?
  tutorResponseFileUrl String?
  tutorResponseVideoUrl String?
  respondedAt DateTime?

  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  tutor       User @relation("LessonRequestsToTutor", fields: [tutorId], references: [id], onDelete: Cascade)
  requester   User @relation("LessonRequestsFromRequester", fields: [requesterId], references: [id], onDelete: Cascade)

  @@index([tutorId, createdAt])
  @@index([requesterId, createdAt])
}

model JobPost {
  id          String       @id @default(uuid())
  parentId    String
  title       String
  description String
  subjects    String[]     @default([])
  location    String?
  budget      Int?
  status      JobPostStatus @default(OPEN)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  parent      User         @relation("JobPostsByParent", fields: [parentId], references: [id], onDelete: Cascade)
  proposals   Proposal[]
  contracts   Contract[]

  @@index([parentId, createdAt])
  @@index([status, createdAt])
}

model Proposal {
  id        String         @id @default(uuid())
  jobPostId String
  tutorId   String
  message   String
  fileUrl   String?
  videoUrl  String?
  status    ProposalStatus @default(SUBMITTED)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  jobPost   JobPost @relation(fields: [jobPostId], references: [id], onDelete: Cascade)
  tutor     User    @relation("ProposalsByTutor", fields: [tutorId], references: [id], onDelete: Cascade)

  contract  Contract?

  @@unique([jobPostId, tutorId])
  @@index([tutorId, createdAt])
  @@index([jobPostId, createdAt])
}

model Contract {
  id        String         @id @default(uuid())
  jobPostId String
  proposalId String        @unique
  parentId  String
  tutorId   String
  status    ContractStatus @default(ACTIVE)
  amount    Int?
  currency  String         @default("ETB")
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  jobPost   JobPost   @relation(fields: [jobPostId], references: [id], onDelete: Cascade)
  proposal  Proposal  @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  parent    User      @relation("ContractsByParent", fields: [parentId], references: [id], onDelete: Cascade)
  tutor     User      @relation("ContractsByTutor", fields: [tutorId], references: [id], onDelete: Cascade)
  messages  ContractMessage[]

  payments  Payment[]
  ledgerEntries LedgerEntry[]

  milestones ContractMilestone[]

  @@index([parentId, createdAt])
  @@index([tutorId, createdAt])
  @@index([jobPostId, createdAt])
  @@index([status, createdAt])
}

model ContractMilestone {
  id         String                  @id @default(uuid())
  contractId String
  title      String
  amount     Int
  currency   String                  @default("ETB")
  status     ContractMilestoneStatus @default(DRAFT)
  fundedAt   DateTime?
  releasedAt DateTime?
  createdAt  DateTime                @default(now())
  updatedAt  DateTime                @updatedAt

  contract   Contract                @relation(fields: [contractId], references: [id], onDelete: Cascade)
  payments   Payment[]
  ledgerEntries LedgerEntry[]

  @@index([contractId, createdAt])
  @@index([status, createdAt])
}

model Payment {
  id                String          @id @default(uuid())
  provider          PaymentProvider
  status            PaymentStatus   @default(PENDING)
  contractId        String
  milestoneId       String?
  createdByUserId   String
  amount            Int
  currency          String          @default("ETB")
  providerReference String?         @unique
  checkoutUrl       String?
  metadata          Json?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  contract          Contract        @relation(fields: [contractId], references: [id], onDelete: Cascade)
  milestone         ContractMilestone? @relation(fields: [milestoneId], references: [id], onDelete: SetNull)
  createdBy         User            @relation("PaymentsByUser", fields: [createdByUserId], references: [id], onDelete: Cascade)
  ledgerEntries     LedgerEntry[]

  @@index([contractId, createdAt])
  @@index([milestoneId, createdAt])
  @@index([createdByUserId, createdAt])
  @@index([provider, status, createdAt])
}

model LedgerEntry {
  id          String          @id @default(uuid())
  contractId  String
  paymentId   String?
  milestoneId String?
  type        LedgerEntryType
  amount      Int
  currency    String          @default("ETB")
  // Idempotency guard: for webhooks, set to e.g. "CHAPA:<tx_ref>:CLIENT_CHARGE"
  idempotencyKey String       @unique
  createdAt   DateTime        @default(now())

  contract    Contract        @relation(fields: [contractId], references: [id], onDelete: Cascade)
  payment     Payment?        @relation(fields: [paymentId], references: [id], onDelete: SetNull)
  milestone   ContractMilestone? @relation(fields: [milestoneId], references: [id], onDelete: SetNull)

  @@index([contractId, createdAt])
  @@index([paymentId, createdAt])
  @@index([milestoneId, createdAt])
  @@index([type, createdAt])
}

model ContractMessage {
  id            String   @id @default(uuid())
  contractId    String
  senderId      String
  body          String
  attachmentUrl String?
  createdAt     DateTime @default(now())

  contract Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
  sender   User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([contractId, createdAt])
  @@index([senderId, createdAt])
}