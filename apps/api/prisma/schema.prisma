// Prisma schema for tutorstartup API

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  PARENT
  TUTOR
  AGENCY
  ADMIN
}

enum LessonRequestStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum JobPostStatus {
  OPEN
  CLOSED
}

enum ProposalStatus {
  SUBMITTED
  WITHDRAWN
  ACCEPTED
  DECLINED
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String
  passwordHash String
  role         UserRole      @default(STUDENT)
  phone        String?       @db.VarChar(50)
  isVerified   Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  tutorProfile TutorProfile?

  lessonRequestsSent     LessonRequest[] @relation("LessonRequestsFromRequester")
  lessonRequestsReceived LessonRequest[] @relation("LessonRequestsToTutor")

  jobPosts JobPost[] @relation("JobPostsByParent")
  proposals Proposal[] @relation("ProposalsByTutor")

  sessions Session[]
}

model Session {
  id               String   @id @default(uuid())
  userId           String
  tokenId          String   @unique
  tokenHash        String
  expiresAt        DateTime
  revokedAt        DateTime?
  replacedByTokenId String?
  userAgent        String?
  ip               String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, revokedAt])
}

model TutorProfile {
  id         String    @id @default(uuid())
  userId     String    @unique
  bio        String?
  subjects   String[]  @default([])
  hourlyRate Int?
  languages  String[]  @default([])
  location   String?
  rating     Float?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LessonRequest {
  id          String              @id @default(uuid())
  tutorId     String
  requesterId String
  subject     String
  message     String
  status      LessonRequestStatus @default(PENDING)

  tutorResponseMessage String?
  tutorResponseFileUrl String?
  tutorResponseVideoUrl String?
  respondedAt DateTime?

  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  tutor       User @relation("LessonRequestsToTutor", fields: [tutorId], references: [id], onDelete: Cascade)
  requester   User @relation("LessonRequestsFromRequester", fields: [requesterId], references: [id], onDelete: Cascade)

  @@index([tutorId, createdAt])
  @@index([requesterId, createdAt])
}

model JobPost {
  id          String       @id @default(uuid())
  parentId    String
  title       String
  description String
  subjects    String[]     @default([])
  location    String?
  budget      Int?
  status      JobPostStatus @default(OPEN)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  parent      User         @relation("JobPostsByParent", fields: [parentId], references: [id], onDelete: Cascade)
  proposals   Proposal[]

  @@index([parentId, createdAt])
  @@index([status, createdAt])
}

model Proposal {
  id        String         @id @default(uuid())
  jobPostId String
  tutorId   String
  message   String
  fileUrl   String?
  videoUrl  String?
  status    ProposalStatus @default(SUBMITTED)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  jobPost   JobPost @relation(fields: [jobPostId], references: [id], onDelete: Cascade)
  tutor     User    @relation("ProposalsByTutor", fields: [tutorId], references: [id], onDelete: Cascade)

  @@unique([jobPostId, tutorId])
  @@index([tutorId, createdAt])
  @@index([jobPostId, createdAt])
}